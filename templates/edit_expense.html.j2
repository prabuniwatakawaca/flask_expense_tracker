{% extends "base.html.j2" %}

{% block content %}

  <h1>Edit Expense</h1>

  <form method="POST">
    {{ form.hidden_tag() }}

    <div class="form-group">
      <label for="date">Date</label>
      <!-- <input type="date" class="form-control" id="datePicker" name="date"> -->
      {{ form.expense_date(class='form-control', type='date') }}
      <script type="text/javascript">
        document.getElementById('expense_date').valueAsDate = new Date();
      </script>
    </div>

    <div class="form-group">
      <label for="categories">Categories</label>
      <!-- <select class="form-control" name="categories">
        <option value="fnb">Food & Beverages</option>
        <option value="transport">Transportation</option>
        <option value="groceries">Groceries</option>
      </select> -->
      {{ form.category_id(class='form-control') }}
    </div>

    <div class="form-group">
      <label for="expense">Expense Detail</label>
      <!-- <input type="text" class="form-control" placeholder="Expense" name="expense"> -->
      {{ form.expense_detail(class='form-control', placeholder='Expense', value=expense.expense_detail) }}
    </div>

    <div class="form-group">
      <label for="amount">Amount</label>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">Rp</span>
        </div>
        <!-- <input type="text" class="form-control" aria-label="Rupiah" name="amount"> -->
        {{ form.amount(class='form-control', aria_label='Rupiah', value=expense.amount) }}
      </div>
    </div>

    <!-- <button type="submit" class="btn btn-primary">Submit</button> -->
    {{ form.submit(class="btn btn-primary") }}
  </form>

{% endblock %}
