{% extends "base.html.j2" %}

{% block content %}

  <h1>Edit Category</h1>

  <form method="POST">
    {{ form.hidden_tag() }}

    <div class="form-group">
      <label for="name">Category Name</label>
      {{ form.name(class='form-control', placeholder='Category', value=category.name) }}
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      {{ form.description(class='form-control', placeholder='Description', default=category.description) }}
    </div>

    {{ form.submit(class="btn btn-primary") }}
  </form>

{% endblock %}
